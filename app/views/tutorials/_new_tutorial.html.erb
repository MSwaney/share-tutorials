<div class="row">
  <h2>Submit Tutorial</h2>
</div>
<%= form_for @tutorial, remote: true do |f| %>
  <div class="row">
    <% if @tutorial.errors.any? %>
      <div class="error_messages">
        <ul>
          <% @tutorial.errors.full_messages.each do |message| %>
            <div class='alert-box'><%= message %></div>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="large-11 large-offset-1 columns">
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :link %>
      <%= f.text_field :link %>
      <%= f.label :category_id %>
      <%= f.select(:category_id, Category.all.collect {|category| [ category.name, category.id ] }, {:include_blank => "Choose A Category", :default => nil} ) %>
      <%= f.submit 'Submit Tutorial', class: 'button small alert radius' %>
    </div>
  </div>
<% end %> 