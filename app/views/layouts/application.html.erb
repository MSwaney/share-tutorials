<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag  "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="top-bar">
      <section class="top-bar-section">
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "<span class='coding'>Coding</span>.<span class='tutorials'>tutorials</span>".html_safe, root_path %></a></h1>
        </li>
      </ul>
        <ul class="left">
          <% categories.each do |category| %>
            <li class="divider"></li>
            <li class="<%= 'active' if current_page?(category_path(category.slug)) %>"><%= link_to category.name, category_path(category.slug) %></li>
          <% end %>
        </ul>
        <ul class="right">
          <% if current_user %>
            <li class="divider"></li>
            <li class='welcome'>Logged in as <%= current_user.name %></li>
            <li class="divider"></li>
            <li><%= link_to "Log Out", logout_path %></li>
            <li class="divider"></li>
          <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if flash[:alert] %>
      <div class='alert-box'> <%= flash[:alert] %> </div>
    <% end %>

    <div class="row">
     <%= yield %>
    </div>
  
    <%= javascript_include_tag "application" %>
  </body>
</html>

