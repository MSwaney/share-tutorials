<% title "Log In | Coding Tutorials" %>

<div class='large-3 columns'>


<h1>Log In</h1>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <p>Not a member yet? <%= link_to "Sign-Up", signup_path %>.</p>
    <div class="actions"><%= submit_tag "Log In", class: 'button small alert radius' %>
  <% end %>
</div>